<%= simple_form_for(@election) do |f| %>
  <div class="input-field">
    <%= f.input :eligible_voters_string, label: 'Who can vote in this election? Input voter email addresses', placeholder: 'Type email addresses here'%>
  </div>
  <div class="input-field">
    <%= f.submit 'Submit', class: "btn-large-green" %>
  </div>
<% end %>
