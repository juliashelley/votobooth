
<%= simple_form_for(@candidature, url: election_candidatures_path) do |f| %>
  <div class="input-field">
    <%= f.input :name, label: 'Name your candidature', prompt: 'Input name' %>
  </div>
  <div class="input-field">
    <%= f.input :picture, label: 'Upload a candidature picture', prompt: 'Not yet hehe' %>

  </div>
  <%= f.submit "Create candidature", class: "btn-large-green" %>
<% end %>

