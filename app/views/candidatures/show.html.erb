<% if @candidature.picture.url.nil? %>
  <div class="page-container-candidature" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path "penguin.jpg", gravity: :center %>)">
  <% else %>
  <div class="page-container-candidature" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path @candidature.picture, gravity: :center %>)">
<% end %>


    <h1 id="candidate-header"><%= @candidature.name %></h1>
    <div class="btn-scroll-down">
      <a href="#promise-card"><span></span></a>
    </div>
  </div>

  <div class="card promise-card" id="promise-card">
    <div class="campaign-promise">
     <p><%= @candidature.tagline %></p>
      <hr>
      <h4>What I stand for...</h4>
      <p><%= @candidature.promise1 %></p>
      <hr>
    </div>
    <div class="campaign-promise">
      <h4>And...</h4>
      <p><%= @candidature.promise2 %></p>
      <hr>
    </div>
    <div class="campaign-promise">
      <h4>Also I like...</h4>
      <p><%= @candidature.promise3 %></p>
      <hr>
    </div>

    <div class="cast-vote-div">
      <%= link_to 'Vote for this candidate', candidature_confirmation_path(@candidature), class: "btn-large-green btn-cast-vote" %>
      <br>
      <br>
      <%= link_to 'Back to candidates', election_candidatures_path(@election) %>
    </div>
  </div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script>
  $(document).ready(function(){
  $("a").on('click', function(event) {
    if (this.hash !== "") {
      event.preventDefault();
      var hash = this.hash;
      $('html, body').animate({
        scrollTop: $(hash).offset().top
      }, 800, function(){
        window.location.hash = hash;
      });
    }
  });
});
</script>
